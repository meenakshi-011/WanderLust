<% layout("/layouts/boilerplate") %> <%= success %>

<div class="container">
    <h1 class="text-center mb-4">My Bookmarks</h1>
    
    <% if (listings && listings.length > 0) { %>
        <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
            <% for (let listing of listings) { %>
                <div class="card col listing-card mb-3">
                    <img src="<%- listing.image %>" class="card-img-top" alt="listing_image" style="height:20rem">
                    <div class="card-body">
                        <h5 class="card-title"><%= listing.title %></h5>
                        <p class="card-text">
                            <strong>&#8377;<%= listing.price.toLocaleString("en-IN") %></strong> /night<br>
                            <small class="text-muted"><%= listing.location %></small>
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="/listings/<%= listing._id %>" class="btn btn-primary btn-sm">View Details</a>
                            <form method="POST" action="/bookmarks/<%= listing._id %>" style="display: inline;">
                                <button type="submit" formaction="/bookmarks/<%= listing._id %>?_method=DELETE" 
                                        class="btn btn-outline-danger btn-sm">
                                    ❤️ Remove
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    <% } else { %>
        <div class="text-center">
            <h3>No bookmarks yet!</h3>
            <p>Start exploring listings and add them to your bookmarks.</p>
            <a href="/listings" class="btn btn-primary">Explore Listings</a>
        </div>
    <% } %>
</div> 