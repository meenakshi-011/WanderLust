  <div class="filter">
    <i class="fa-solid fa-globe"></i>
    <p>Worldwide</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-mountain-sun"></i>
    <p>Mountains</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-campground"></i>
    <p>Camping</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-city"></i>
    <p>Cities</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-igloo"></i>
    <p>Unique stays</p>
</div>
  <div class="filter">
    <i class="fa-solid fa-tree"></i>
    <p>Nature</p>
  </div>
  <div class="filter">
    <i class="fa-sharp fa-solid fa-umbrella-beach"></i>
    <p>Beach</p>
</div>
  <div class="filter">
    <i class="fa-solid fa-snowflake"></i>
    <p>Winter</p>
  </div>
<div class="filter">
    <i class="fa-solid fa-tree-city"></i>
    <p>Countryside</p>
</div>
  <div class="filter">
    <i class="fa-solid fa-building-columns"></i>
    <p>Historical</p>
</div>
 <div class="filter">
    <i class="fa-solid fa-water-ladder"></i>
    <p>Lakeside</p>
</div>
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
  }
  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 1rem;
    opacity: 0.7;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
</style>


<!-- Listings Grid -->
<div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
  <% for (let listing of alllistings) { %>
    <div class="col mb-4">
      <a href="/listings/<%= listing._id %>" style="text-decoration: none; color: inherit;">
        <div class="card listing-card h-100">
          <img src="<%- listing.image %>" class="card-img-top" alt="listing_image" style="height:20rem; object-fit:cover;">
          <div class="card-body">
          <p class="card-text">
  <%= listing.title %> <br>
  <% if (listing.price !== undefined && listing.price !== null) { %>
    &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
  <% } else { %>
    Price not available
  <% } %>
</p>
         </div>
        </div>
      </a>
    </div>
  <% } %>
</div>

